{{> header}}
<main>
    <div class="offer-details">
        <h1>{{name}}</h1>
        <div class="info">
            <img src="{{image}}" alt="">
            <div class="description">{{description}}
                <br>
                <br>
                <p class="price">${{price}}</p>
            </div>
        </div>
        <div class="actions">
            {{#if isCreator}}
            <a href="#/edit/{{id}}">Edit</a>
            <a>Delete</a>
            {{else}}
                {{#if alreadyBought}}
                <span>You bought it</span>
                {{else}}
                <a>Buy</a>
                {{/if}}
            {{/if}}
        </div>
    </div>
</main>