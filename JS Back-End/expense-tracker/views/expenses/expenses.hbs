<main>

    <section class="actions">
        <form action="/refil" method="POST">
            <h2>Salary time? Refill your account amount.</h2>
            <input type="text" id="refill-amount" name="refillAmount">
            <button type="submit">Refill</button>
        </form>
        <div>
            <h2>New expense comming up?</h2>
            <a href="/add">Add it now</a>
        </div>
    </section>

    <hr class="separator">
    {{#if userExpenses}}
    <table class="expenses">
        <thead>
            <tr>
                <th>Merchant</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
            </tr>

        </thead>
        <tbody>
            {{#each userExpenses}}
            <tr>
                <td>
                    <p>{{merchant}}</p>
                    {{#if report}}
                    <div class="report">
                        <a href="/report/{{_id}}">Report</a>
                    </div>
                    {{/if}}
                </td>
                <td>
                    <img src="/static/images/amount.png" alt="">
                    <p>лв {{total}}</p>
                </td>
                <td>
                    <img src="/static/images/category.png" alt="">
                    <p>{{category}}</p>
                </td>
                <td>
                    <img src="/static/images/hastag.png" alt="">
                    <p>{{description}}</p>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
    {{/if}}
</main>